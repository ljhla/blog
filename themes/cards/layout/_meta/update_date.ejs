<div class="post-footer__meta">
    <p>
        <a href="<%= url_for('archives/' + date(post.date, 'YYYY/MM/')) %>" class="post-meta__date button">
            <%= theme.meta.date.title + date(post.date, theme.meta.date.format) %>
        </a>
        <%= (theme.meta.updated.title || __('post.updated')) + date(page.updated, theme.meta.updated.format) %>
    </p>
</div>